    <div class="col-6" style="border: 1px solid gray">
        <img class="img-on-HomeIndex" src="@Model.MostPopularArticle.ImageLink" alt="Article Image" style="width:100%">
        <h1>@Model.MostPopularArticle.HeadLine</h1>
        <h5>@Model.MostPopularArticle.ContentSummary</h5>
