@model NextNews.ViewModels.HomeIndexVM

@{
    ViewData["Title"] = "Home Page";
}


<partial name="_CarouselPartialView" model="Model.PopularArticles" />

@* <partial name="_PopularPartialView" model="Model.PopularArticles"></partial> 
 *@



<div class="row">
    @* vänstra kolumnen *@
    <div class="col-9" style="border: 1px solid gray; border-radius: 25px; padding: 50px">

        <partial name="_PartialViewArticleList" model="Model.PopularArticles"></partial>

@*         <img class="img-on-HomeIndex" src="@Model.PopularArticles" alt="Article ImageLink" style="width:100%">
        <h1>@Model.PopularArticles.HeadLine</h1>
        <h5>@Model.PopularArticles./* ContentSummary */</h5>
 *@

    </div>

    @* högra kolumnen *@
    <div class="col-3"  style="border: 6px "  Padding: "3px">

        <h2 style="color: bold black">Latest News</h2>
        @foreach (var news in Model.LatestArticles)
        {
            <div>

                <div class="article-imageLink">
                    <img class="img-on-HomeIndex" src="@news.ImageLink" alt="Article ImageLink" style="width:100%">
                </div>

                <div class="latest-news-headline">
                    <a asp-action="Details" asp-controller="Article" asp-route-id="@news.Id" class="latest-news-link">
                        @news.HeadLine
                    </a>
                </div>

                <div class="latest-news-item mb-4">
                </div>
                <p class="latest-news-summary">@news.ContentSummary</p>
                <p class="latest-news-date">Published on @news.DateStamp?.ToString("M") @news.DateStamp?.ToString("t")</p>
            </div>
        }
    </div>
</div>

