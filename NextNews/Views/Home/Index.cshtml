                    </div>
                    <div class="article-news-headline">
                        <a asp-action="Details" asp-controller="Article" asp-route-id="@firstspecificArticle.Id" class="article-news-link">
                            @firstspecificArticle.HeadLine
                        </a>
                    </div>
                    <div class="article-news-item mb-3">
                    </div>
                    <p class="article-news-summary">@firstspecificArticle.ContentSummary</p>
                    <p class="article-news-date">Published on @firstspecificArticle.DateStamp?.ToString("M") @firstspecificArticle.DateStamp?.ToString("t")</p>
                </div>

                <div class="col-4">
                    <!-- Display details for the second specific article -->
