
@{
    ViewData["Title"] = "EditorDashboard";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    div.container {
        max-width: 800px;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    ul.navbar {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
        border-radius: 8px;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

            li a:hover {
                background-color: #ddd;
                color: black;
            }
</style>

<div class="container">
    <h1>Dashboard</h1>

    <ul class="navbar">
        <li><a href="/">Home</a></li>

        <li><a asp-controller="Categories" asp-action="Index">Category List</a></li>
        <li><a asp-controller="Article" asp-action="ListArticles">Articles List</a></li>
        <li><a asp-controller="Subscription" asp-action="ListSubscription">Subscription List</a></li>
        <li><a asp-controller="Statistics" asp-action="Index">Statistics</a></li>
    </ul>
</div>



