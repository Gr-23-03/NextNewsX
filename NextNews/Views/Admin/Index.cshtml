@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Statistics</h5>
                    <canvas id="userChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Article Statistics</h5>
                    <canvas id="articleChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var userCount = @ViewData["UserCount"];
            var articleCount = @ViewData["ArticleCount"];

            var userChart = new Chart(document.getElementById('userChart').getContext('2d'), {
                type: 'pie',
                data: {
                    labels: ['Users'],
                    datasets: [{
                        data: [userCount],
                        backgroundColor: ['rgba(75, 192, 192, 0.2)'],
                        borderColor: ['rgba(75, 192, 192, 1)'],
                        borderWidth: 1
                    }]
                }
            });

            var articleChart = new Chart(document.getElementById('articleChart').getContext('2d'), {
                type: 'pie',
                data: {
                    labels: ['Articles'],
                    datasets: [{
                        data: [articleCount],
                        backgroundColor: ['rgba(255, 99, 132, 0.2)'],
                        borderColor: ['rgba(255, 99, 132, 1)'],
                        borderWidth: 1
                    }]
                }
            });
        });
    </script>
}
