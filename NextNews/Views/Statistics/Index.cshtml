<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Statistics</h4>
                    <ul class="list-group">
                        <li class="list-group-item">Total Users: @Model.UserCount</li>
                        <li class="list-group-item">Total Articles: @Model.ArticleCount</li>
                    </ul>

                    <!-- Add a canvas element for the chart -->
                    <canvas id="myChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add a script to initialize and render the chart -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Get the canvas element
        var ctx = document.getElementById('myChart').getContext('2d');

        // Create a bar chart
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Users', 'Articles'],
                datasets: [{
                    label: 'Count',
                    data: [@Model.UserCount, @Model.ArticleCount],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)',
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>